<% provide(:title, "Sign in") %>
<%= render 'layouts/navigation' %>
<img src="http://i.imgur.com/v95onjM.jpg?1" id="background-signin" >

<div class="container-fluid">
  <div class="row col-xs-4 col-xs-offset-4">
    <div class="well text-center" id="well-signin">
      <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email, class: "control-label" %>
        <%= f.text_field :email, class: "form-control input-sm", autofocus: true %>
        </br>

        <%= f.label :password, class: "control-label" %>
        <%= f.password_field :password, class: "form-control input-sm" %>
        </br>

        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <% end %>
      </br>

      <p>New user? <%= link_to "Sign up!", signup_path %></p>
    </div>
  </div>
</div>
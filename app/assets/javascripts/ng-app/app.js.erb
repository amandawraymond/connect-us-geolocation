angular
    .module('connectusApp', [
        'ngAnimate',
        'ui.router',
        'ui.bootstrap',
        'uiGmapgoogle-maps',
        'templates'
    ])
    .config(['$stateProvider', '$urlRouterProvider', '$locationProvider', 'uiGmapGoogleMapApiProvider',
            function ($stateProvider, $urlRouterProvider, $locationProvider, uiGmapGoogleMapApiProvider) {
        

      uiGmapGoogleMapApiProvider.configure({
            key: 'AIzaSyCJh6kHPa5K2u_7u3WZR4Df883_08BOfLc',
            v: '3.17',
            libraries: 'weather,geometry,visualization'
      });

        /**
       * Routes and States
       */
      $stateProvider
          .state('dashboard', {
              abstract: true,
              url: '/dashboard',
              templateUrl: 'dashboard/main.html',
              controller: 'MainCtrl'
          })
              // the default route when someone hits dashboard
              .state('dashboard.directions', {
                  url: '',
                  templateUrl: 'dashboard/directions.html',
                  controller: 'MainCtrl'
              })
              .state('dashboard.places', {
                  url: '/places',
                  templateUrl: 'dashboard/places.html',
                  controller: 'MainCtrl'
              })
              .state('dashboard.map', {
                  url: '/map',
                  templateUrl: 'dashboard/map.html',
                  controller: 'MainCtrl'
              });   


      // default fall back route
      $urlRouterProvider.otherwise('/dashboard');

      // enable HTML5 Mode for SEO
      $locationProvider.html5Mode(true);

    
   }]);   
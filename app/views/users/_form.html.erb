<div class="container-fluid">
  <%= form_for(@user) do |f| %>
  <div class="row col-xs-4 col-xs-offset-4">
    <div class="well text-center" id="well-signup" >
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.label :name, class: "control-label" %>
      <%= f.text_field :name, class: "form-control input-sm", autofocus: true %>
      </br>

      <%= f.label :email, class: "control-label" %>
      <%= f.email_field :email, class: "form-control input-sm" %>
      </br>

      <%= f.label :password, class: "control-label" %>
      <%= f.password_field :password, class: "form-control input-sm" %>
      </br>

      <%= f.label :password_confirmation, "Confirmation", class: "control-label" %>
      <%= f.password_field :password_confirmation, class: "form-control input-sm" %>
      </br>

      <%= f.label :phone_number, "Phone Number", class: "control-label" %>
      <%= f.telephone_field :phone_number, class: "form-control input-sm" %>
      </br>

      <%= f.label :street_address, "Street Address", class: "control-label" %>
      <%= f.text_field :street_address, class: "form-control input-sm" %>
      </br>

      <%= f.label :city, "City", class: "control-label" %>
      <%= f.text_field :city, class: "form-control input-sm" %>
      </br>

      <%= f.label :state, "State", class: "control-label" %>
      <%= f.text_field :state, class: "form-control input-sm" %>
      </br>

      <%= f.label :zip_code, "Zip Code", class: "control-label" %>
      <%= f.number_field :zip_code, class: "form-control input-sm" %>
      </br>
      
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
      </br>
      </br>
      <p>Already a user? <%= link_to "Sign in!", signin_path %></p
    </div>
  </div>
  <% end %>
</div>


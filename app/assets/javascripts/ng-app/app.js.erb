angular
    .module('connectusApp', [
        'ngAnimate',
        'ui.router',
        'uiGmapgoogle-maps'
    ])
    .config(['$stateProvider', '$urlRouterProvider', '$locationProvider', 'uiGmapGoogleMapApiProvider',
            function ($stateProvider, $urlRouterProvider, $locationProvider, uiGmapGoogleMapApiProvider) {
        /**
       * Routes and States
       */
      $stateProvider
          .state('main', {
              url: '/main',
              templateUrl: '<%= asset_path "main.html" %>',
              controller: 'MainCtrl'
          })
          .state('group', {
              url: '/',
              templateUrl: '<%= asset_path "group.html" %>',
              controller: 'GroupCtrl'
          })
          .state('about', {
              url: '/about',
              templateUrl: '<%= asset_path "about.html" %>',
              controller: 'AboutCtrl'
          })
           .state('home', {
              url: '/home',
              templateUrl: '<%= asset_path "home.html" %>',
              controller: 'HomeCtrl'
          });


      // default fall back route
      $urlRouterProvider.otherwise('/');

      // enable HTML5 Mode for SEO
      // $locationProvider.html5Mode(true);

      uiGmapGoogleMapApiProvider.configure({
            key: 'AIzaSyCJh6kHPa5K2u_7u3WZR4Df883_08BOfLc',
            v: '3.17',
            libraries: 'weather,geometry,visualization'
      });
   }]);   